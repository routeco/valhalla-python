[metadata]
# replace with your username:
name = valhalla
version = 3.1.0
author = Nils Nolde
author_email = nils@gis-ops.com
description = Python bindings for Valhalla
long_description = file: README.md
long_description_content_type = text/markdown
url = https://github.com/gis-ops/valhalla-python
project_urls =
    Bug Tracker = https://github.com/gis-ops/valhalla-python/issues
classifiers =
    Programming Language :: Python :: 3
    Programming Language :: Python :: 3.6
    Programming Language :: Python :: 3.7
    Programming Language :: Python :: 3.8
    Programming Language :: Python :: 3.9
    License :: OSI Approved :: MIT License
    Operating System :: OS Independent

[options]
package_dir =
    = @CMAKE_CURRENT_BINARY_DIR@
packages = find:
python_requires = >=3.5

[options.packages.find]
where = @CMAKE_CURRENT_BINARY_DIR@
